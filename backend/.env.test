# Test Environment Configuration
# This file is used when running tests (NODE_ENV=test)

# Server Configuration
NODE_ENV=test
API_PORT=3002

# Database Configuration - Test Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=posting_system_test
DB_USER=dev_user
DB_PASSWORD=dev_password
DB_SSL=false

# Security Configuration (same as dev for consistency)
JWT_SECRET=test-jwt-secret-for-testing-only
JWT_EXPIRE=24h
BCRYPT_SALT_ROUNDS=10

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=../uploads/test
AVATAR_PATH=./uploads/test/avatars

# Group Upload Configuration
GROUP_AVATAR_PATH=../uploads/test/groups/avatars
GROUP_BANNER_PATH=../uploads/test/groups/banners
GROUP_MEDIA_PATH=../uploads/test/groups/media
GROUP_IMAGES_PATH=../uploads/test/groups/images

ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp
ALLOWED_VIDEO_TYPES=video/mp4,video/webm,video/ogg
ALLOWED_AUDIO_TYPES=audio/mp3,audio/wav,audio/ogg

# Feature Flags
ENABLE_FILE_UPLOAD=true
ENABLE_VIDEO_UPLOAD=true
ENABLE_EMOJI_REACTIONS=true
ENABLE_NESTED_COMMENTS=true
MAX_COMMENT_DEPTH=5

# Image Processing
IMAGE_QUALITY=80
THUMBNAIL_SIZE=300
AVATAR_SIZE=150

# Logging (less verbose for tests)
LOG_LEVEL=error

# Cache Configuration (disable Redis for tests - tests run without Redis for speed)
# Set CACHE_ENABLED=true temporarily to test Redis caching functionality
CACHE_ENABLED=false
